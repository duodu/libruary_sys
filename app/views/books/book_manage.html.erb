<% if flash[:notice] %>
  <div style="color: red">
  	<% flash[:notice].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>
<h1>Listing books</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Book</th>
    <th>Book info</th>
    <th>Category</th>
    <th>Storage</th>
    <th>Update time</th>
    <th></th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.bookname %></td>
    <td><%= book.bookinfo %></td>
    <td><%= book.category.name %></td>
    <td><%= book.storage %></td>
    <td><%= book.uptime.strftime("%Y-%m-%d %H:%M:%S") %></td>
    <td><%= link_to "edit", :action=>"edit_book", :id=>book.id %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to "add new book", :action => "add_newbook" %>
<%= link_to "edit category", :controller => "categories", :action => "show_cate" %>
