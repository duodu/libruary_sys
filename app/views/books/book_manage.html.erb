<h1>Listing books</h1>
<table>
  <tr>
    <th>ID</th>
    <th>Book</th>
    <th>Book info</th>
    <th>Category</th>
    <th>Storage</th>
    <th>Last borrow time</th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.bookname %></td>
    <td><%= book.bookinfo %></td>
    <% if book.category %>
    <td><%= book.category.name %></td>
    <% else %>
    <td></td>
    <% end %>
    <td><%= book.storage %></td>
    <% if book.uptime %>
    <td><%= book.uptime.strftime("%Y-%m-%d %H:%M:%S") %></td>
    <% else %>
    <td></td>
    <% end %>
  </tr>
<% end %>
</table>